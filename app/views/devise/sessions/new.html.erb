<%= content_for :title, "Log in" %>

<div class="form">
  <div class="form--left d-none d-md-block">
    <%= link_to "gnoteworthy", root_path, class: "form--left__brand" %>
  </div>

  <div class="form--right">
    <%= link_to(
      "gnoteworthy",
      root_path,
      class: "form--right__brand d-md-none",
    ) %>

    <h2 class="form--right__headline">Log in</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form--right__field">
        <%= f.label :email, class: "form--right__label" %>
        <%= f.email_field(
          :email,
          autofocus: true,
          autocomplete: "off",
          placeholder: "greg.gnome@gnoteworthy.com",
          class: "form--right__input",
        ) %>
      </div>

      <div class="form--right__field">
        <%= f.label :password, class: "form--right__label" %>
        <%= f.password_field(
          :password,
          autocomplete: "off",
          placeholder: "Your top secret password",
          class: "form--right__input",
        )%>
      </div>

      <div class="actions">
        <%= f.submit "Log in", class: "button button--green my-3" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
